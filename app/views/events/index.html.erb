<h1>List of Events</h1>

<table class = "table table-striped">
	<tr>
		<th>Name</th>
		<th>Active</th>
	</tr>

<% @events.each do |event| %>
	<tr>
		<td><%= link_to event.name, event_path(event) %></td> 
		<td><%= event.active ? 'Yes' : 'No' %></td>
	</tr>
<% end %>

</table>

<%= link_to 'New Event', new_event_path, :class => 'btn btn-primary' %>
