<%= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Registration</legend>
    <%= f.association :student, :collection => eligible_unregistered_students_for_section(@registration.section) %> 
    <%= f.input :section_id, :as => :hidden, :input_html => {:value => @registration.section_id} %> 

  </fieldset>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', sections_path, :class => 'btn' %>
  </div>
<% end %>