<h1>Registrations</h1>

<table class = "table table-striped">
  <tr>
    <th>Section</th>
    <th>Student</th>
	<th>Date</th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= link_to registration.section_id, registration_path(registration) %></td>
    <td><%= link_to registration.student.name, registration_path(registration) %></td>
	<td><%= registration.date.strftime("%m/%d/%y") %></td>
  </tr>
<% end %> 
</table> 

<span class="smtext">
<%= will_paginate @registrations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<%= link_to 'New Registration', new_registration_path, :class => 'btn btn-primary' %>


