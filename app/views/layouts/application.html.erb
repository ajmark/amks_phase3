<!DOCTYPE html>
<html>
<head>
  <title>A &amp; M Karate Tournament System</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- NOTE: assumes bootstrap grid system -->
  <div class="wrapper">
    <div class="container">
    <!-- TITLE BAR -->
  	
  	<!-- NAV BAR -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" <%= link_to "A&M KarateSchool", home_path %> </a>
          <ul class="nav">
            <li><%= link_to "Students", students_path %></li>
            <li><%= link_to "Sections", sections_path %></li>
            <li><%= link_to "Events", events_path %></li>
            <li><%= link_to "Registrations", registrations_path %></li>
          </ul>
        </div>
      </div>
    </div>

  	<!-- MAIN CONTENT -->
  	<div class="container">

      <% flash.each do |name, msg| %>
      <div class="alert alert-<%= :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">x</a>
         <%= msg %>
      </div>
      <% end %>

  		<div class="row">
  			<!-- main content placed here -->
  			<div class="span12">
  			  <div id="main_content">
  			   <%= yield %>
  			  </div>
  			</div>
  		</div>

  	</div>
  </div>
	
	<!-- FOOTER -->
  <footer class="footer">
    <div class="container">
      <%= render :partial => "partials/footer" %>
    </div>
  </footer>
</body>
</html>
