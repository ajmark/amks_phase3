<h1>Section Details</h1>

<p>
  <b>Rank(s): </b>
  <%= "#{rank_name(@section.min_rank)} - #{rank_name(@section.max_rank)}" %>
</p>

<p>
  <b>Age(s): </b>
  <%= "#{@section.min_age} - #{@section.max_age}" %>
</p>

<p>
  <b>Active: </b>
  <%= @section.active ? "Yes" : "No" %>
</p>

<p>
  <b>Students Registered</b>
  <table class = "table table-striped">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Rank</th>
    </tr>
  
  <% @section.students.each do |student| %>
    <tr>
      <td><%= link_to student.name, student_path(student) %></td>
      <td><%= student.age %></td>
      <td><%= rank_name(student.rank) %></td>
    </tr>
  <% end %> 
  </table> 

</p>

<div class="form-actions">
  <%= link_to 'Back', sections_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_section_path(@section), :class => 'btn' %>
  <%= link_to 'Delete', section_path(@section), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>